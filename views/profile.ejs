<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/profile.css">
  </head>
  <body>

    <div class="containerpers">
        <div class="cardpers">
          <div class="profile-picture">
            <img src="https://imgs.search.brave.com/fSbKgW1FXY53Vay5wMvsrjlaZ_4VZ7A4waM1lVsRd6c/rs:fit:500:0:0/g:ce/aHR0cHM6Ly93d3cu/c3RvY2t2YXVsdC5u/ZXQvZGF0YS8yMDIw/LzAxLzMwLzI3Mjky/Ny90aHVtYjE2Lmpw/Zw" alt="Profile Picture">
          </div>
          <h2 class="name"><%= user.fullname %></h2>
          <h3 class="username">@<%= user.username %></h3>
          <p class="tagline">Lorem ipsum, dolor sit amet consectetur adipisicing.</p>
          <p class="description">Lorem ipsum dolor sit amet consectetur adipisicing elit. Asperiores?</p>
          <a href="/logout" class="button">Logout</a>
          <form action="/upload" method="post" enctype="multipart/form-data">
            <input type="text" name="filecaption" placeholder="some caption">
            <input type="file" name="file">
            <input type="submit">

          </form>
        </div>
    </div>
    <div class="container">
      <div class="cards flex">
        <% user.posts.forEach(function(post){ %>
          <div class="card" style="width: 18rem;">
            <img src="/images/uploads/<%= post.image %>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%= post.imageText %></h5>
              
               </div>
          </div>

       <% }) %>
      </div>
       
      
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  </body>
</html>